<h1>Listing Paquet keys</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Active</th>
      <th>Text</th>
      <th>Pid</th>
      <th>Created at</th>
    </tr>
  </thead>

  <tbody>
    <% @paquet_keys.reject(&:blank?).each do |paquet_key| %>
      <tr>
        <td><%= paquet_key.try(:name).unpack("C*").pack("U*") %></td>
        <td><%= Time.at(paquet_key.date.to_i) %></td>
        <td><%= paquet_key.try(:active).unpack("C*").pack("U*") %></td>
        <td><%= paquet_key.try(:text).unpack("C*").pack("U*") %></td>
        <td><%= paquet_key.try(:pid) %></td>
        <td><%= paquet_key.try(:created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<center><%= will_paginate @paquet_keys, renderer: BootstrapPagination::Rails %></center>
